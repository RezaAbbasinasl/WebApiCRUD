@model RegionDTO

@if (Model is not null)
{
    <form method="post" class="mt-3">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Code</label>
            <input type="text" class="form-control" asp-for="Code" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="RegionImageUrl" readonly />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Delete</button>
            <a class="btn btn-danger" asp-controller="Region" asp-action="index">Cancel</a>
        </div>
    </form>
}