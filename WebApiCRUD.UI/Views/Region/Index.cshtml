@model IEnumerable<RegionDTO>

<h1 class="mt-3">Regions</h1>
<div class="d-flex justify-content-end my-3">
    <a class="btn btn-secondary" asp-controller="Region" asp-action="Add">Add Region</a>
</div>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Code
            </th>
            <th>
                Name
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Code
                </td>
                <td>
                    @item.Name
                </td>
                <td class="text-center">
                    <a asp-controller="Region" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a>
                    <a asp-controller="Region" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                    <a asp-controller="Region" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>